---
const caseStudies = [
  {
    title: 'Reforestation Monitoring',
    description: 'How we helped track the success of a 1000-acre reforestation project.',
    image: '/images/case-study-1.jpg',
    stats: {
      'Trees Monitored': '50,000+',
      'Success Rate': '94%',
      'Time Saved': '80%'
    }
  },
  {
    title: 'Disease Prevention',
    description: 'Early detection of pine beetle infestation saved 10,000 trees.',
    image: '/images/case-study-2.jpg',
    stats: {
      'Area Covered': '5,000 acres',
      'Trees Saved': '10,000+',
      'Cost Saved': '$2.5M'
    }
  }
];
---

<section class="py-24 sm:py-32 bg-gray-50 dark:bg-gray-800">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl lg:text-center">
      <h2 class="text-base font-semibold leading-7 text-green-600">Case Studies</h2>
      <p class="mt-2 text-3xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-4xl">
        Real results from real forests
      </p>
      <p class="mt-6 text-lg leading-8 text-gray-600 dark:text-gray-300">
        See how our AI platform is making a difference in forest management around the world.
      </p>
    </div>

    <div class="mx-auto mt-16 max-w-2xl sm:mt-20 lg:mt-24 lg:max-w-none">
      <div class="grid grid-cols-1 gap-x-8 gap-y-16 lg:grid-cols-2">
        {caseStudies.map((study) => (
          <div class="flex flex-col overflow-hidden rounded-lg shadow-lg">
            <div class="flex-shrink-0">
              <img class="h-48 w-full object-cover" src={study.image} alt={study.title} />
            </div>
            <div class="flex flex-1 flex-col justify-between bg-white dark:bg-gray-900 p-6">
              <div class="flex-1">
                <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
                  {study.title}
                </h3>
                <p class="mt-3 text-base text-gray-600 dark:text-gray-300">
                  {study.description}
                </p>
                <dl class="mt-6 grid grid-cols-1 gap-4 sm:grid-cols-3">
                  {Object.entries(study.stats).map(([label, value]) => (
                    <div>
                      <dt class="text-sm font-medium text-gray-600 dark:text-gray-400">{label}</dt>
                      <dd class="mt-1 text-lg font-semibold tracking-tight text-green-600">{value}</dd>
                    </div>
                  ))}
                </dl>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>